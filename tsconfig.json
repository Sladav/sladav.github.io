{
    "compilerOptions": {
        "outDir": "lib",
        "baseUrl": "./",

        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "lib": ["ESNext", "DOM"],
        "jsx": "react",
        "resolveJsonModule": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ]
}